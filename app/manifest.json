{
  "manifest_version": 3,
  "name": "Unsolved Hunter",
  "version": "0.1.0",
  "description": "BOJ 그룹 멤버가 풀지 않은 문제를 뽑아주는 확장 프로그램",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://solved.ac/", "https://www.acmicpc.net/"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/16.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.acmicpc.net/group/ranklist/*"],
      "js": ["scripts/ranklist.js"],
      "css": ["styles/ranklist.css"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://www.acmicpc.net/group/workbook/create/*",
        "https://www.acmicpc.net/group/workbook/edit/**"
      ],
      "js": ["scripts/workbook.js"],
      "css": ["styles/workbook.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
